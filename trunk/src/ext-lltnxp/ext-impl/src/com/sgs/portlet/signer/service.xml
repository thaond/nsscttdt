<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 5.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_5_1_0.dtd">

<service-builder package-path="com.sgs.portlet.signer">
	<namespace>signer</namespace>
	<entity name="Signer" local-service="true" remote-service="true"
		table="pml_signer">

		<!-- PK fields -->

		<column name="signerId" type="long" primary="true" />

		<!-- Other fields -->
		
		<column name="userId" type="long" />
		
		<!-- finder -->
		
		<finder return-type="Signer" name="UserId">
			<finder-column name="userId"></finder-column>
		</finder>
		
	</entity>
	
</service-builder>