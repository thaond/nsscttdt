<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 5.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_5_1_0.dtd">

<service-builder package-path="com.sgs.portlet.career">
	<namespace>career</namespace>
	<entity name="Career" local-service="true" remote-service="true"
		table="pml_career">

		<!-- PK fields -->

		<column name="careerId" type="String" primary="true" db-name="careerid"/>

		<!-- Other fields -->

		<column name="careerCode" type="String" db-name="careercode"/>
		<column name="careerName" type="String" db-name="careername"/>
		<column name="description" type="String" db-name="description"/>
		<column name="active" type="String" db-name="active"/>
		
		<!-- Order -->

		<!-- xuancong close, doi lai sap xep tang dan theo ten
		<order by="desc">
			<order-column name="careerId" />
		</order>
		-->
		
		<order by="asc">
			<order-column name="careerName" case-sensitive="false" />
		</order>
		
		<!-- finder -->
		<finder name="CareerCode" return-type="Collection">
			<finder-column name="careerCode" comparator="LIKE" case-sensitive="false"/>
		</finder>
		
		<finder name="CareerName" return-type="Collection">
			<finder-column name="careerName" comparator="LIKE"/>
		</finder>
		
		<finder name="Description" return-type="Collection">
			<finder-column name="description" comparator="LIKE"/>
		</finder>
		<finder name="C_N_D" return-type="Collection">
			<finder-column name="careerCode" comparator="LIKE"/>
			<finder-column name="careerName" comparator="LIKE"/>
			<finder-column name="description" comparator="LIKE"/>
		</finder>
	</entity>
	<exceptions>
		<exception>CareerCodeSameCode</exception>
	</exceptions>
</service-builder>